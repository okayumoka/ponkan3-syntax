{
  "name": "ponkan-syntax",
  "displayName": "Ponkan Syntax",
  "description": "Syntax Highlight for Ponkan",
  "publisher": "studiomikan",
  "version": "0.0.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/studiomikan/ponkan-syntax"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ponkan",
        "aliases": [
          "Ponkan",
          "ponkan"
        ],
        "extensions": [
          ".pon",
          "pon"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ponkan",
        "scopeName": "source.pon",
        "path": "./syntaxes/ponkan.tmLanguage.json",
        "embeddedLanguages": {
          "meta.block.js.ponkan": "javascript",
          "source.js": "javascript"
        }
      }
    ]
  }
}
